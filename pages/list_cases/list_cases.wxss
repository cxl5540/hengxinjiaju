.nav {
  height: 120rpx;
  width: 100%;
  position: relative;
  margin: 20rpx 0;
  text-align: center;
}
.nav > image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
}
.nav > text {
  position: relative;
  top: 30rpx;
  font-size: 38rpx;
  color: #ffffff;
}
.active {
  color: #3FB5A2;
  border-bottom: 2px solid #3FB5A2;
}
.container > .hed > view {
  display: flex;
  justify-content: space-between;
}
.container > .hed > .search {
  height: 72rpx;
  margin-top: 30rpx;
}
.container > .hed > .search > view {
  background-color: rgba(47, 140, 125, 0.1);
  flex: 1;
}
.container > .hed > .search > view:nth-child(2) {
  border-left: 1px solid #dddddd;
  border-right: 1px solid #dddddd;
}
.container > .hed > .search > view {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}
.container > .hed > .search > view image {
  width: 18rpx;
  height: 10rpx;
  vertical-align: middle;
}
.container .case > view {
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
  height: 420rpx;
  margin-top: 10rpx;
}
.container .case > view > view {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  color: #ffffff;
  text-align: center;
  padding: 6rpx 0;
  background: rgba(0, 0, 0, 0.4);
}
.container .case > view > image {
  width: 100%;
  height: 100%;
}
