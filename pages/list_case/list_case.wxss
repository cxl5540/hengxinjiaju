.home-swiper {
  margin: auto;
  height: 300rpx;
}
.home-swiper .slide-image {
  width: 100%;
  height: 300rpx;
}
.bold {
  position: relative;
  font-size: 36rpx;
  color: #F19149;
}
.bold > text {
  display: inline-block;
  color: #999999;
  font-size: 24rpx;
  margin-left: 10rpx;
}
.item {
  border-bottom: 1px solid #eeeeee;
  padding: 20rpx 0;
}
.name {
  font-size: 32rpx;
  margin-bottom: 20rpx;
  color: #000000;
}
.name > text {
  font-weight: bold;
  color: red;
}
.scroll-view {
  width: 100%;
  display: inline-flex;
  height: 200rpx;
}
.scroll-view view {
  width: 250rpx;
  height: 200rpx;
  margin: 0 10rpx 0 0;
}
.scroll-view view image {
  width: 250rpx;
  height: 200rpx;
}
.menu {
  font-size: var(--f_s);
  padding: 30rpx 0 0;
}
.menu > .ti {
  display: flex;
  justify-content: flex-end;
}
.menu > .ti > view:nth-child(2) {
  font-size: 24rpx;
  display: flex;
}
.menu > .ti > view:nth-child(2) .kf {
  color: #0070C0;
  display: flex;
  margin-left: 20rpx;
}
.menu > .ti image {
  max-width: 36rpx;
  max-height: 36rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}
.weui-half-screen-dialog__hd {
  display: none;
}
.case > view {
  display: inline-block;
  width: 340rpx;
  height: 240rpx;
  margin-top: 10rpx;
}
.case > view > image {
  width: 100%;
  height: 100%;
}
.case > view:nth-child(2n) {
  float: right;
}
.tools > .lt,
.tools > .rt {
  position: relative;
}
.tools > .lt > button,
.tools > .rt > button {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: transparent;
  color: transparent;
}
.tools > .lt > .msg,
.tools > .rt > .msg {
  z-index: 10;
}
.tools > .lt > .tel,
.tools > .rt > .tel {
  z-index: 9;
}
.model {
  width: 100%;
  height: 100vh;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  background: rgba(0, 0, 0, 0.5);
}
.model > .main {
  position: relative;
  top: 100rpx;
}
.model > .main > image {
  width: 100%;
  height: 760rpx;
}
.model > .main > .content {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 20%;
  left: 0;
  z-index: 10;
  text-align: center;
  color: #EB382C;
}
.model > .main > .content > view:nth-child(2) {
  font-weight: bold;
}
.model > .main > .content > view:nth-child(2) > text {
  font-size: 90rpx;
}
.model > .main > .content > view:nth-child(3) {
  width: 328rpx;
  height: 1px;
  background: #CE3D2E;
  margin: auto;
}
.model > .main > .content > view:nth-child(4),
.model > .main > .content > view:nth-child(5) {
  font-size: 22rpx;
  margin-top: 10rpx;
}
.model > .main > .content > button {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  position: relative;
  background-size: cover;
  background: transparent;
  margin-top: 120rpx;
  left: 29%;
  top: 15%;
}
.model > .main > .content > button > image,
.model > .main > .content > button > text {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
}
.model > .main > .content > button > text {
  font-weight: bold;
  color: #EB382C;
  font-size: 30rpx;
  z-index: 10;
}
.model > .main > .content > image {
  width: 64rpx;
  height: 64rpx;
  position: relative;
  top: 200rpx;
}
