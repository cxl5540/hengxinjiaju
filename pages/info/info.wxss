page {
  background: rgba(47, 140, 125, 0.08);
  padding-bottom: 200rpx;
}
.inpts {
  background: #ffffff;
  margin-top: 40rpx;
  border-radius: 10rpx;
}
.inpts > view {
  display: flex;
  box-sizing: border-box;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #eee;
  position: relative;
}
.inpts > view > text {
  flex: 0.25;
}
.inpts > view > icon {
  position: absolute;
  left: 25%;
}
.inpts > view > picker {
  position: absolute;
  right: 20rpx;
  color: #999999;
}
.inpts > view > input {
  flex: 0.65;
  position: relative;
  padding: 0 0 0 40rpx;
  text-align: right;
}
.inpts .need {
  position: relative;
}
.inpts .need::after {
  content: '*';
  position: absolute;
  right: 26rpx;
  top: 0;
  color: red;
}
.inpts .sgzneed::after {
  right: 50rpx;
}
.inpts .lgzneed::after {
  right: 80rpx;
}
.btn {
  background: #ffffff;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 20rpx 0;
  z-index: 10;
}
.btn > view {
  height: 72rpx;
  background: #44C6AD;
  border-radius: 10rpx;
  line-height: 72rpx;
  color: #ffffff;
  text-align: center;
}
